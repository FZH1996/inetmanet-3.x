{
    REQUEST = 1;
    SEGMEN = 2;
    GENERAL = 3;
    CONFIRMATION = 4;
}

packet UDPBasicPacketP2P 
{
    ManetAddress nodeId;
    ManetAddress destination;
    int type @enum(PacketType);
    int64_t segmentRequest = -1;
    uint64_t totalSize;
